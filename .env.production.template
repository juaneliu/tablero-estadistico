# Plantilla de configuración de producción para Oracle Cloud
# Copia este archivo como .env.production en el servidor y actualiza los valores

# Base de datos PostgreSQL
DATABASE_URL="postgresql://admin:cambiar_password_seguro@localhost:5432/tablero_estadistico_prod"

# JWT Secret (cambiar por un valor seguro)
JWT_SECRET="tu_jwt_secret_super_seguro_de_32_caracteres_minimo"

# NextAuth Secret (cambiar por un valor seguro)
NEXTAUTH_SECRET="tu_nextauth_secret_super_seguro_de_32_caracteres_minimo"

# URL de la aplicación (actualizar con tu dominio)
NEXTAUTH_URL="https://tu-dominio.com"

# Configuración de entorno
NODE_ENV="production"

# Puerto de la aplicación
PORT=3000

# Configuración de logs
LOG_LEVEL="info"

# Configuración de CORS (si es necesario)
ALLOWED_ORIGINS="https://tu-dominio.com"

